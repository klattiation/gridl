{
    "name": "gridl",
    "version": "0.11.0-beta.0",
    "license": "MIT",
    "author": {
        "name": "Sascha Klatt",
        "url": "https://saschaklatt.dev"
    },
    "homepage": "https://gridl.dev",
    "keywords": [
        "grid",
        "matrix",
        "es6",
        "javascript",
        "typescript",
        "2d",
        "tile",
        "map",
        "data",
        "structure",
        "rows",
        "columns"
    ],
    "main": "index.js",
    "scripts": {
        "build": "yarn build:clean && yarn build:declarations && yarn build:rollup && yarn build:docs",
        "build:clean": "rm -rf dist/*",
        "build:declarations": "tsc --project tsconfig.declarations.json",
        "build:rollup": "rollup -c --no-treeshake",
        "build:docs": "./scripts/generate-docs.sh",
        "build:docs:json": "typedoc --json docs/typedoc.json",
        "lint": "eslint src/**/* test/**/*",
        "lint:fix": "eslint src/**/* test/**/* --fix",
        "test": "yarn jest",
        "test:coverage": "yarn jest --coverage",
        "start": "yarn test --watch",
        "serve:coverage": "cd coverage/lcov-report/ && http-server",
        "serve:docs": "cd docs/gridl/latest && http-server",
        "serve:stats": "cd stats/ && http-server"
    },
    "dependencies": {},
    "peerDependencies": {},
    "devDependencies": {
        "@rollup/plugin-typescript": "^8.1.0",
        "@types/jest": "^26.0.20",
        "@types/redux": "^3.6.0",
        "@typescript-eslint/eslint-plugin": "^4.14.1",
        "@typescript-eslint/parser": "^4.14.1",
        "eslint": "^7.19.0",
        "husky": "^4.3.5",
        "jest": "^26.6.3",
        "redux": "^4.0.5",
        "rollup": "^2.38.1",
        "rollup-plugin-copy": "^3.3.0",
        "rollup-plugin-generate-package-json": "^3.2.0",
        "rollup-plugin-terser": "^7.0.2",
        "rollup-plugin-typescript2": "^0.29.0",
        "rollup-plugin-visualizer": "^4.2.0",
        "ts-jest": "^26.4.4",
        "tslib": "^2.1.0",
        "typedoc": "^0.20.19",
        "typedoc-plugin-pages": "^1.1.0",
        "typescript": "^4.1.3"
    },
    "directories": {
        "lib": "src/",
        "doc": "docs/",
        "test": "test/"
    },
    "funding": {
        "type": "individual",
        "url": "https://buymeacoffee.com/i62xdOZF3"
    },
    "husky": {
        "hooks": {
            "pre-commit": "yarn lint"
        }
    }
}