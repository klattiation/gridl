{
  "name": "gridl",
  "version": "0.10.1",
  "description": "Lightweight and easy to use library to handle data on 2D grids.",
  "main": "dist/gridl.min.js",
  "directories": {
    "lib": "./dist",
    "test": "./test"
  },
  "scripts": {
    "build": "npm run build-dev && npm run build-dist",
    "build-dist": "WEBPACK_ENV=build webpack",
    "build-dev": "WEBPACK_ENV=dev webpack",
    "test": "mocha-webpack --webpack-config webpack.test.config.js \"test/**/*.test.js\" --recursive",
    "test-and-watch": "mocha-webpack --webpack-config webpack.test.config.js \"test/**/*.test.js\" --recursive --watch",
    "doc": "./scripts/generate-docs.sh",
    "eslint": "eslint src/**/*.js test/**/*.js",
    "coverage": "nyc mocha-webpack --timeout 30000 --webpack-config webpack.coverage.config.js \"test/**/*.test.js\""
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:klattiation/gridl.git"
  },
  "keywords": [
    "grid",
    "2d",
    "tile",
    "map",
    "data",
    "structure",
    "rows",
    "columns"
  ],
  "author": "Sascha Klatt",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/klattiation/gridl/issues"
  },
  "homepage": "https://klattiation.github.io/gridl/",
  "devDependencies": {
    "babel": "^6.23.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-loader": "^7.1.4",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-istanbul": "^4.1.6",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "chai": "^4.1.2",
    "eslint": "^4.19.0",
    "eslint-loader": "^2.0.0",
    "husky": "0.15.0-beta.16",
    "jsdoc": "^3.5.5",
    "mocha": "^5.0.4",
    "mocha-webpack": "^1.1.0",
    "nyc": "^11.6.0",
    "path": "^0.12.7",
    "webpack": "^3.11.0",
    "webpack-node-externals": "^1.6.0"
  },
  "nyc": {
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "exclude": [
      ".tmp",
      "test"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run eslint && npm test",
      "pre-publish": "npm run eslint && npm test && npm build"
    }
  }
}
